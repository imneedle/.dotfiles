#!/bin/bash

if [[ $# -eq 1 ]]; then
    selected=$1
else
    selected=$(find $HOME $HOME/.dotfiles $HOME/work/cpp $HOME/work/imag -mindepth 1 -maxdepth 1 -type d | fzf)
fi

if [[ -z $selected ]]; then
    exit 0
fi

selected_name=$(basename "$selected" | tr . _)
tmux_running=$(pgrep -f tmux)

# If we are not currently running tmux, we don't detach the session
if [[ -z $tmux_running ]]; then
    tmux new-session -s $selected_name -c $selected
    exit 0
fi

# If tmux isn't running and there is no session with the selected name
if ! tmux has-session -t=$selected_name 2> /dev/null ; then
    tmux new-session -ds $selected_name -c $selected
fi

tmux switch-client -t $selected_name
